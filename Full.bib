keywords = {brown dwarfs,dust,extinction,methods: numerical,molecular processes,stars: atmospheres,stars: low-mass},
pages = {297},
title = {{Dust in brown dwarfs. II. The coupled problem of dust formation and sedimentation}},
url = {http://www.ncbi.nlm.nih.gov/entrez/query.fcgi?db=pubmed{\&}cmd=Retrieve{\&}dopt=AbstractPlus{\&}list{\_}uids=2003A{\&}A...399..297W{\%}5Cnpapers://ea8910fe-ebfb-41c3-aa24-c42f43e9f3e8/Paper/p1637},
