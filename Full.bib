isbn = {0004-637X; 1538-4357},
issn = {0004-637X},
journal = {The Astrophysical Journal},
keywords = {brown dwarfs,color figures,convection,low-mass,methods,numerical,online-only material,stars,turbulence,waves},
pages = {85},
primaryClass = {astro-ph.EP},
title = {{Atmospheric Dynamics of Brown Dwarfs and Directly Imaged Giant Planets}},
url = {http://stacks.iop.org/0004-637X/776/i=2/a=85?key=crossref.2c0a8e2e753c3d27eb472f0011f67f12},
